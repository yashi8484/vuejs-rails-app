h1
  | Editing Article
div#app
  = render 'form'
  = link_to 'Show', @article
  |  |
  = link_to 'Back', articles_path

javascript:
  var app = new Vue({
    el: "#app",
    data: {
      title: "",
      body: "",
      age: null,
    },
    mounted: function() {
      this.title = #{raw @article.title.to_json}
      this.body = #{raw @article.body.to_json}
      this.age = #{raw @article.age.to_json}
    }
  })
